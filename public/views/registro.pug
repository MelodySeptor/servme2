doctype html
html
	head
		include ./head.pug
		script(src='https://www.google.com/recaptcha/api.js')

	body
		include ./header.pug
		//Ñigui Ñogui
		div(id="index-banner" class="parallax-container")
			div(class="section no-pad-bot")
				div(class="container")
					br
					br
					h1(class="header center teal-text text-lighten-2") Registro
					div(class="row center")
						h5(class="header col s12 light") Busca, encuentra y contacta
					div(class="row center")
						h5(class="header col s12 light") Únete para empezar a disfurtar
					br 
					br
			div(class="parallax")
				img(src="images/index_background1.jpg" alt="Index_Image_Background")

		br
		br
		div(class="container")
			div(clas="section")
				div(class="row")
					form(class="col s12" method="post" action="/peticionRegistro")
						div(class="row")
							div(class="input-field col s6")
								i(class="material-icons prefix") account_circle
								input(id="nombreRegistro" name="nombreRegistro" type="text" class="validate" required="required")
								label(for="nombreRegistro") Nombre

							div(class="input-field col s6")
								input(id="ApellidosRegistro" name="ApellidosRegistro" type="text" class="validate" required="required")
								label(for="ApellidosRegistro") Apellidos

						div(class="row")
							div(class="input-field col s12")
								i(class="material-icons prefix") email
								input(id="emailRegistro" name="emailRegistro" type="email" class="validate" required="required")
								label(for="emailRegistro") Email

						div(class="row")
							div(class="input-field col s6")
								i(class="material-icons prefix") lock
								input(id="passwordRegistro" type="password" class="validate" required="required")
								label(for="passwordRegistro") Contraseña

							div(class="input-field col s6")
								input(id="passwordRepetirRegistro" type="password" class="validate" required="required")
								label(for="passwordRepetirRegistro") Repite la contraseña
						div(class="row")
							div(class="input-field col s12")
								label
									input(class="with-gap" name="group1" type="radio" required="required") 
									span Acepto los términos, condiciones y el uso de cookies.
						br
						div(class="row")
							div(class="input-field col s12")
								div(class="g-recaptcha" data-sitekey="6Lfb2nQUAAAAAIfQzYIn85KoLNj6yBrZv2RP7VdH")
							
						div(class="row")
							div(class="input-field col s6")
								i(class="material-icons prefix") error_outline
								label
									a(href="/acceder") Ya estoy registrado
							div(class="input-field col s6")
								button(class="btn waves-effect waves-light" type="submit" name="action") Registrar
									i(class="material-icons right") chevron_right
		br
		include ./footer.pug